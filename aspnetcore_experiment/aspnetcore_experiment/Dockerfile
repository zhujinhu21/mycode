#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["aspnetcore_experiment/aspnetcore_experiment.csproj", "aspnetcore_experiment/"]
RUN dotnet restore "aspnetcore_experiment/aspnetcore_experiment.csproj"
COPY . .
WORKDIR "/src/aspnetcore_experiment"
RUN dotnet build "aspnetcore_experiment.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "aspnetcore_experiment.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "aspnetcore_experiment.dll"]